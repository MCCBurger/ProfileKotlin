<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/idName"
        android:layout_width="149dp"
        android:layout_height="40dp"
        android:layout_marginTop="88dp"
        android:background="#242A34"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/txtName"
        android:textColor="@color/Yellow"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/idImgMe"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idName"
        app:srcCompat="@drawable/me" />

    <Button
        android:id="@+id/idBtnViewProfile"
        android:layout_width="113dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/background_dark"
        android:shadowColor="@android:color/background_dark"
        android:text="@string/txtBtnProfile"
        android:textColor="@color/Yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idImgMe" />
</androidx.constraintlayout.widget.ConstraintLayout>